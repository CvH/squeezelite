# Cross compile support - create a Makefile which defines these three variables and then includes this Makefile...
CFLAGS  ?= -Wall -fPIC -O2 $(OPTS) -I/opt/local/include -I./include -DRESAMPLE -DFFMPEG -DDSD
LDFLAGS ?= -lpthread -ldl -L/opt/local/lib -lportaudio
EXECUTABLE ?= squeezelite-mac

SOURCES = main.c slimproto.c utils.c output_alsa.c output.c output_pa.c output_pack.c output_stdout.c output_vis.c dop.c buffer.c stream.c decode.c flac.c pcm.c mad.c vorbis.c faad.c mpg.c resample.c process.c ffmpeg.c
DEPS    = squeezelite.h slimproto.h

OBJECTS = $(SOURCES:.c=.o)

all: $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CC) $(OBJECTS) $(LDFLAGS) -o $@

$(OBJECTS): $(DEPS)

.c.o:
	$(CC) $(CFLAGS) $< -c -o $@

clean:
	rm -f $(OBJECTS) $(EXECUTABLE)
